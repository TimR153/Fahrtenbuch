@inherits LayoutComponentBase

<MudThemeProvider @ref="@_mudThemeProvider" @bind-IsDarkMode="@_isDarkMode" Theme="_theme" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar>
        <MudStack Row="true" Spacing="5" AlignItems="AlignItems.Center">
            <MudLink Href="/">
                <MudImage Src="_content/Fahrtenbuch.Shared/favicon.png"
                          Alt="App Logo"
                          Width="32" />
            </MudLink>
            <MudIconButton OnClick="DrawerToggle"
                           Icon="@Icons.Material.Rounded.Notes"
                           Color="Color.Inherit"
                           Edge="Edge.Start" />
        </MudStack>
        <MudSpacer />
        <MudStack Row="true" Spacing="5" AlignItems="AlignItems.Center">
            <MudIconButton Icon="@DarkLightModeButtonIcon"
                           OnClick="DarkModeToggle"
                           Color="Color.Inherit"
                           Edge="Edge.End" />
            <MudIconButton Icon="@Icons.Material.Rounded.Login"
                           OnClick="Login"
                           Color="Color.Inherit"
                           Edge="Edge.End" />
        </MudStack>
    </MudAppBar>


    <MudDrawer @bind-Open="_drawerOpen" Elevation="1">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">@Constants.AppName</MudText>

        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>

    <MudMainContent>
        <MudContainer Class="pt-1">
            @Body
        </MudContainer>
    </MudMainContent>

</MudLayout>

